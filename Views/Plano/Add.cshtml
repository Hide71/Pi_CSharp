@model PlanoModel
@{
    ViewData["Title"]="Cadastrar Plano";
}
<div class="text-center">
    <h1 class="display-4">Cadastrar Plano</h1>

</div>
<form asp-controller="Plano" asp-action="Add" method="post">
    <div class="form-group">
        <label for="plano">Plano</label>
        <input type="text" asp-for="Plano" class="form-control" placeholder="Digite o plano">

    </div>
    <div class="form-group">
        <label for="cortes">Cortes</label>
        <input type="number" asp-for="Cortes" class="form-control" placeholder="Digite os cortes">

    </div>
    <div class="form-group">
        <label for="barbas">Barbas</label>
        <input type="number" asp-for="Barbas" class="form-control" placeholder="Digite as barbas">

    </div>
    <div class="form-group">
        <label for="valor">Valor</label>
        <input type="number" asp-for="Valor" class="form-control" placeholder="Digite o valor" >

    </div>
     <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class= "btn btn-warning btn-block" asp-controller= "Plano" asp-action= "Index" roler="button">Voltar</a>
</form>