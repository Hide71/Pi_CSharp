@model ClienteModel
@{
    ViewData["Title"]="Adicionar Cliente";
}
<div class="text-center">
    <h1 class="display-4">Cadastrar Cliente</h1>

</div>
<form asp-controller="Cliente" asp-action="Add" method="post">
     <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
    @Html.ValidationMessageFor(x => x.Nome)
  </div>
  <div class="form-group">
    <label for="endereco">Endereço</label>
    <input type="text" asp-for="Endereco" class="form-control" placeholder="Digite o endereço">
    @Html.ValidationMessageFor(x => x.Endereco)
  </div>
  <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o cpf">
    @Html.ValidationMessageFor(z => z.Cpf)
  </div>
  <div class="form-group">
    <label for="telefone">Telefone</label>
    <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o telefone">
    @Html.ValidationMessageFor(y => y.Telefone)
  </div >
   <div class="form-group">
    <label for="email">Email</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o Email">
    @Html.ValidationMessageFor(a => a.Email)
  </div >
  <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
  <a class= "btn btn-warning btn-block" asp-controller= "Cliente" asp-action= "Index" roler="button">Voltar</a>
</form>