@model List<ClienteModel>
@{
    ViewData["Title"]="Cadastro de clientes";
}
<div class= "text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class= "btn btn-primary" role="button" asp-controller="Cliente" asp-action="Add">Adicionar</a>
    </div>
    <h1 class="display-4">Lista de Clientes</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Endereço</th>
      <th scope="col">Cpf</th>
      <th scope="col">Telefone</th>
      <th scope="col">E-Mail</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    @if(Model != null && Model.Any()){
      foreach(ClienteModel cliente in Model){

    <tr>
      <th scope="row">@cliente.Id</th>
      <td>@cliente.Nome</td>
      <td>@cliente.Endereco</td>
      <td>@cliente.Cpf</td>
      <td>@cliente.Telefone</td>
      <td>@cliente.Email</td>
      <td>
        <div>
            <a role="button" class="btn btn-success" asp-route-id="@cliente.Id" asp-controller= "Cliente" asp-action= "Edit">Editar</a>
            <a role="button" class= "btn btn-danger" asp-route-id="@cliente.Id" asp-controller= "Cliente" asp-action= "Delete">Excluir</a>
        </div>
      </td>
    </tr>
      }
    }
  </tbody>
</table>

</div>
